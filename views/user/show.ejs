<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

  <body>
    <%- include('../partials/nav.ejs') %>
    <h3 class="pagetitles">Your Profile</h3>
    <div class="white-background">
      <div>
        <!-- Profile Card -->
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="/images/people.jpg" class="card-img" style="height: 200px;">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3 class="card-title"><%= user.firstName %><%= user.lastName %></h3>
                <p class="card-text"><%= user.username %></p>
                <p class="card-text"><%= user.email %></p>
              </div>
            </div>
          </div>
        </div>



        
        <!-- Liked Beaches Cards -->
        <div class='beachcards-beachindexpage'>
          <% if (user.beaches.length) { %> 
            <% for (let i = 0; i <user.beaches.length; i++) { %>
              <div class="likedBeachCard-wrapper">
                <div class="likedBeachCard">
                  <a href="/beaches/">
                    <img src="/images/people.jpg" alt="Waves" style="width: 100%; height: 50%" />
                  </a>
                </div>
              </div>
          <% } %> <% } else { %>
            <p>Like beaches to save them here</p>
          <% } %>
      </div>    
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/bs.ejs') %>
  </body>
</html>
