        <a href="/beaches/" class="btn btn-primary">Surf San Diego</a>
      </div>
    </div>

  </div>

  <!----------- Footer ----------->
  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
    </div>
